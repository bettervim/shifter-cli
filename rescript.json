{
  "name": "shifter",
  "sources": [
    {
      "dir": "src",
      "subdirs": true
    }
  ],
  "package-specs": [
    {
      "module": "es6",
      "in-source": true
    }
  ],
  "suffix": ".res.mjs",
  "ppx-flags": [
    [
      "@greenlabs/ppx-spice/ppx",
      "-uncurried"
    ]
  ],
  "bs-dependencies": [
    "@rescript/core",
    "@rescript/react",
    "rescript-nodejs",
    "@greenlabs/ppx-spice"
  ],
  "bsc-flags": [
    "-open RescriptCore",
    "-open Render"
  ],
  "jsx": {
    "version": 4,
    "mode": "automatic"
  }
}
